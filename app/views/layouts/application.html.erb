    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#uno" id="menu">
      <ion-icon name="menu-outline"></ion-icon>
    </button>
    <div class="collapse navbar-collapse" id="uno">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
